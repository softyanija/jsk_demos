<?xml version="1.0" encoding="utf-8"?>
<launch>
  <arg name="gui" default="true"/>
  <arg name="manager" default="/camera/realsense2_camera_manager" />

  <!-- <include file="$(find jsk_pcl_ros_utils)/sample/include/play_rosbag_shelf_bin.xml" /> -->

  <arg name="INPUT_CLOUD" value="/camera/depth_registered/points" />
  <arg name="FILTERED_CLOUD" value="/attention_clipper/output" />

  <node name="line_segment_manager"
        pkg="nodelet" type="nodelet"
        args="manager" output="screen" />

  <!-- <node name="voxelgrid" -->
  <!--       pkg="nodelet" type="nodelet" -->
  <!--       args="load pcl/VoxelGrid line_segment_manager" -->
  <!--       output="screen"> -->
  <!--   <remap from="~input" to="$(arg INPUT_CLOUD)" /> -->
  <!--   <rosparam> -->
  <!--     filter_field_name: z -->
  <!--     filter_limit_min: 0.0 -->
  <!--     filter_limit_max: 5.0 -->
  <!--     leaf_size: 0.02 -->
  <!--   </rosparam> -->
  <!-- </node> -->
  <node name="attention_clipper"
          pkg="nodelet" type="nodelet"
          args="load jsk_pcl/AttentionClipper $(arg manager)">
      <remap from="~input/points" to="$(arg INPUT_CLOUD)" />
      <rosparam>
        frame_id: camera_color_optical_frame
        use_multiple_attention: false
        dimension_x: 0.1
        dimension_y: 0.1
        dimension_z: 0.15
        initial_pos: [0.0, 0.0, 0.075]
      </rosparam>
  </node>

  <node name="extract_indices"
        pkg="jsk_pcl_ros" type="extract_indices">
    <remap from="~input" to="$(arg INPUT_CLOUD)" />
    <remap from="~indices" to="attention_clipper/output/point_indices" />
  </node>

  <!-- <node name="euclidean_clustering" -->
  <!--       pkg="nodelet" type="nodelet" -->
  <!--       args="load jsk_pcl/EuclideanClustering line_segment_manager" -->
  <!--       output="screen"> -->
  <!--   <remap from="~input" to="$(arg INPUT_CLOUD)" /> -->
  <!-- </node> -->

  <!-- <node name="euclidean_clustering_decomposer" -->
  <!--       pkg="nodelet" type="nodelet" -->
  <!--       args="load jsk_pcl/ClusterPointIndicesDecomposerZAxis line_segment_manager" -->
  <!--       output="screen"> -->
  <!--   <remap from="~input" to="$(arg FILTERED_CLOUD)" /> -->
  <!--   <remap from="~target" to="/euclidean_clustering/output" /> -->
  <!-- </node> -->

  <node name="line_segment_detector"
        pkg="nodelet" type="nodelet"
        args="standalone jsk_pcl/LineSegmentDetector"
        output="screen">
    <!-- <remap from="~input" to="$(arg FILTERED_CLOUD)" /> -->
    <!-- <remap from="~input_indices" to="/euclidean_clustering/output" /> -->
    <remap from="~input" to="$(arg INPUT_CLOUD)" />
    <remap from="~input_indices" to="/attention_clipper/output/cluster_point_indices" />
    <rosparam>
      outlier_threshold: 0.04
      max_iteration: 1000
      min_indices: 30
      min_length: 0.05
    </rosparam>
  </node>

  <group if="$(arg gui)">
    <node name="rviz"
          pkg="rviz" type="rvi"
          args="-d $(find jsk_pcl_ros)/sample/rviz/line_segment_detector.rviz"/>
  </group>
</launch>
